<h1> Selected flight </h1>
<p> From: <%= @flight.from_airport.airport_code %></p>
<p> To: <%= @flight.to_airport.airport_code %></p>
<p> Date: <%= @flight.start_datetime.strftime("%m/%d/%Y") %></p>
<p> Time: <%= @flight.start_datetime.strftime("%H:%M") %></p>
<p> Duration: <%= @flight.flight_duration/60 %> minutes</p>

<%= form_for @booking do |f| %>
  <%= f.hidden_field :flight_id, :value => @flight.id %>
   <% i = 1 %>
    <%= f.fields_for :passengers do |addy_form| %>
    <p> Passenger <%= i %></p>
      <%= addy_form.label :name %>
      <%= addy_form.text_field :name %> <br>
      <%= addy_form.label :email %>
      <%= addy_form.text_field :email %> <br><br>
      <% i += 1 %>
    <% end %>
  <%= f.submit "Book flight"%>
<% end %>
<br>
<%= link_to "Return to search", root_path %>
